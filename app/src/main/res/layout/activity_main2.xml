<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/ash"
    android:layout_height="match_parent"
    tools:context=".MainActivity2" >

<androidx.constraintlayout.widget.ConstraintLayout
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/top_constraint"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="22dp"
        android:text="facebook"
        android:textColor="@color/facebook_blue"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/seacrch"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@id/face"
        android:src="@drawable/search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="110dp"/>

    <ImageView
        android:id="@+id/message"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/seacrch"
        android:layout_marginTop="28dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:src="@drawable/message"/>


    <ImageView
        android:id="@+id/home"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/face"
        android:layout_marginTop="18dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/home"/>

    <ImageView
        android:id="@+id/people"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@+id/home"
        app:layout_constraintTop_toBottomOf="@+id/face"
        android:layout_marginTop="18dp"
        android:src="@drawable/people"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/video"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@+id/people"
        app:layout_constraintTop_toBottomOf="@+id/face"
        android:layout_marginTop="18dp"
        android:src="@drawable/video"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/marketplace"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@+id/video"
        app:layout_constraintTop_toBottomOf="@+id/face"
        android:layout_marginTop="18dp"
        android:src="@drawable/marketplace"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/notification"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@+id/marketplace"
        app:layout_constraintTop_toBottomOf="@+id/face"
        android:layout_marginTop="18dp"
        android:src="@drawable/notif"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/pull"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@+id/notification"
        app:layout_constraintTop_toBottomOf="@+id/face"
        android:layout_marginTop="18dp"
        android:src="@drawable/pull"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/cam"
        android:layout_width="60dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/circle"/>

    <EditText
        android:layout_width="330dp"
        android:layout_height="59dp"
        app:layout_constraintLeft_toRightOf="@+id/cam"
        android:hint="     What's on your mind?"
        app:layout_constraintTop_toBottomOf="@+id/people"/>

    <ImageView
        android:id="@+id/live"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cam"
        android:layout_marginTop="18dp"
        android:src="@drawable/video"
        android:layout_marginLeft="32dp"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@id/live"
        app:layout_constraintTop_toBottomOf="@+id/cam"
        android:layout_marginTop="18dp"
        android:src="@drawable/live"
        android:layout_marginLeft="82dp"/>

    <ImageView
        android:id="@+id/room"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintTop_toBottomOf="@+id/cam"
        android:layout_marginTop="18dp"
        android:src="@drawable/video"
        android:layout_marginLeft="82dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

<!--    <androidx.constraintlayout.widget.ConstraintLayout-->
<!--        app:layout_constraintTop_toBottomOf="@id/top_constraint"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:background="@color/white"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintLeft_toLeftOf="parent"-->
<!--        app:layout_constraintRight_toRightOf="parent">-->

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:fadeScrollbars="true"
            android:scrollbarSize="0dp"
            app:layout_constraintTop_toBottomOf="@id/top_constraint"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/card"
                android:background="@color/black"
                android:padding="8dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@color/white"
                    android:id="@+id/view1"
                    android:padding="10dp"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="18dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/afric"/>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    app:layout_constraintTop_toTopOf="@id/view1"
                    app:layout_constraintLeft_toRightOf="@+id/view1"
                    android:background="@color/white"
                    android:id="@+id/view2"
                    android:layout_marginLeft="10dp"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="18dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/joe"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:layout_constraintTop_toTopOf="@id/view2"
                    app:layout_constraintLeft_toRightOf="@+id/view2"
                    android:background="@color/white"
                    android:id="@+id/view3"
                    android:layout_marginLeft="10dp"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="18dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/me"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:layout_constraintTop_toTopOf="@id/view3"
                    app:layout_constraintLeft_toRightOf="@+id/view3"
                    android:background="@color/white"
                    android:id="@+id/view4"
                    android:layout_marginLeft="10dp"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="18dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/chi"/>

                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scrool"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="450dp">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="40dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/profile"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="12dp"/>

        <TextView
            android:id="@+id/airdrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/profile"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:text="AIRDROP"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/profile"
            app:layout_constraintTop_toBottomOf="@id/airdrop"
            android:text="Yungfresh Masta"
            android:layout_marginLeft="5dp"
            android:textColor="@color/ash"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@id/airdrop"
            android:text=". 1h ."
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/world"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            app:layout_constraintLeft_toRightOf="@+id/time"
            app:layout_constraintTop_toBottomOf="@+id/airdrop"
            android:layout_marginTop="3dp"
            android:src="@drawable/world"/>

        <ImageView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            app:layout_constraintLeft_toRightOf="@+id/world"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/line"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="34dp"/>

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="40dp"
            android:layout_height="35dp"
            app:layout_constraintLeft_toRightOf="@+id/line"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/close"
            android:layout_marginTop="17dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="12dp"
            android:text="@string/writeup"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
